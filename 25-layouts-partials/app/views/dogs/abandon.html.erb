<%= form_for @dog do |f| %>
  <label>Dog's Name:</label>
  <%= f.text_field :name %>

  <br>
  </br>

  <label><strong>Select an Shelter:</strong></label>
  <%= f.collection_radio_buttons :shelter_id, Shelter.all, :id, :name  %>

  <br>
  </br>

  <%= f.hidden_field :owner_id, :value => nil %>

  <br>
  </br>
  <%= f.submit "Abandon!" %>
<% end %>