<h1>Create a New Dog</h1>
<%= form_for @dog do |f| %>
  <label>Dog's Name:</label>
  <%= f.text_field :name %>

  <br>
  </br>

  <label>Dog's Age:</label>
  <%= f.number_field :age %>

  <br>
  </br>

  <label>Dog's Breed:</label>
  <%= f.text_field :breed %>

  <br>
  </br>

  <label><strong>Select an owner:</strong></label>
  <%= f.collection_radio_buttons :owner_id, Owner.all, :id, :name  %>

  <br>
  </br>


  <label><strong>Or enter a new owner's name: </strong></label>

  <%= f.fields_for :owner_attributes do |o| %>
    <%= o.text_field :name %>
  <% end %>

  <br>
  </br>
  <%= f.submit "Create!" %>
<% end %>