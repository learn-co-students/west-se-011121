<h1>Add an allergy</h1>

<%= form_for @allergy do |f| %>  
<% if @allergy.errors.any? %>
        <ul>
            <% @allergy.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %> 
    <%= f.label :user %>
    <%= f.collection_select :user_id, User.all, :id, :name %>
    <%= f.label :ingredient %>
    <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>
    <%= f.submit %>
<% end %>