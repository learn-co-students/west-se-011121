<h1>Add a recipe</h1>

<div class="container p-3 my-3 border">
    <%= form_for @recipe do |f| %>
        <% if @recipe.errors.any? %>
            <ul>
                <% @recipe.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        <% end %>

        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
        <div class="form-group">
            <%= f.label :meal_type, "Enter Breakfast, Lunch, Dinner, Appetizer or Sweet" %>
            <%= f.text_field :meal_type %>
        </div>

        <div class="form-group">
            <%= f.collection_select :user_id, @users, :id, :name %>
        </div>
        <%= f.submit "Submit", class:"btn btn-outline-success" %>
    <% end %>
</div>